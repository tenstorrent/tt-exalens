FROM ubuntu:22.04
SHELL ["/bin/bash", "-c"]

RUN mkdir /home/workdir
WORKDIR /home/workdir

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive

# Install run dependencies
RUN apt-get update && apt-get install -y \
	software-properties-common \
	build-essential \
    git \
    git-lfs \
	libyaml-cpp-dev \
	libboost-all-dev \
	libhwloc-dev \
	libzmq3-dev \
	xxd 

# Install test dependencies
RUN apt-get update && apt-get install -y \
	libgtest-dev \
	libgmock-dev

# Install minimal dependencies for Python environment, pip, and wheel builds
RUN apt-get update && apt-get install -y \
    libssl-dev \
    python3 \
    python3-venv \
    python3-pip \
    python3-dev \
    build-essential \
    python3-wheel 

# Upgrade to latest pip
RUN pip install --upgrade pip

RUN apt-get clean

# Copy the requirements files for pip
COPY dbd/requirements.txt .
COPY test/test_requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt
RUN pip install --no-cache-dir -r test_requirements.txt
RUN pip install wheel build setuptools
